import java.util.Scanner;

abstract class Solve5_12{
	private Solve5_12 next;
	public Solve5_12() {
		next = null;
	}
	public void setNext(Solve5_12 obj) {
		next = obj;
	}
	public Solve5_12 getNext() {
		return next;
	}
	public abstract void draw();
}


class Line extends Solve5_12 {
	@Override
	public void draw() {
		System.out.println("Line");
	}
}

class Rect extends Solve5_12{
	@Override
	public void draw() {
		System.out.println("Circle");
	}
}
class Circle extends Solve5_12{
	@Override
	public void draw() {
		System.out.println("Circle");
	}
}

class GraphicEditor {
	private String name;
	private Solve5_12 start=null, last=null;
	private Scanner sc= new Scanner(System.in);
	
	public GraphicEditor(String name) {
		this.name = name;
	}	
	public void run() {
		System.out.println("그래픽에디터" + name + "를 실행합니다.");
		int choice=0; // 삽입,삭제
		int num=0;	  // 모양고르는 번호
		
		while(choice!=4) {
			System.out.println("삽입(1), 삭제(2), 모두보기(3), 종료(4)");
			choice = sc.nextInt();
			switch(choice) {
			case 1: //insert()
				System.out.print("Line(1), Rect(2), Circle(3) : ");
				num = sc.nextInt();
				if(num < 1 || num > 3) {
					System.out.println("잘못입력");
					break;
				}
				insert(num);
				break;
			case 2: //delete()
				System.out.print("삭제할 도형 위치입력 :");
				num = sc.nextInt();
				if(!delete(num)) {
					System.out.println("삭제할 수 없음.");
				}
				break;
			case 3: //show()
				Solve5_12 t = start;
				while(t != null) {
					t.draw();
					t = t.getNext();
				}
			case 4:
				System.out.println(name+"를 종료합니다.");
			default:
				System.out.println("1~4까지 입력가능");
			}
		}
	}

	private void insert(int num) {
		Solve5_12 obj = null;
		switch(num) {
		case 1:
			obj = new Line();
			break;
		case 2:
			obj = new Rect();
			break;
		case 3:
			obj = new Circle();
			break;
		}
		if(start==null) {
			start = last = obj;
		}
		else {
			last.setNext(obj);
			last = obj;
		}
	}
	
	private boolean delete(int num) {
		Solve5_12 cur=start;
		Solve5_12 pre=start;
		if(start == null) return  false;
		for(int i=0; i<num; i++) {
			pre = cur;
			cur = cur.getNext();
			if(cur==null) {
				return false;
			}
		}
	}
	
	public static void main(String[] args) {
	GraphicEditor ge = new GraphicEditor("beauty");
	ge.run();
	}
}

